-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => "ratings_form" do
  include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, if params[:ratings]; params[:ratings].include?(rating) else true end, {:id => "ratings_#{rating}"}
  = submit_tag "Refresh", :id => "ratings_submit"
%table#movies
  %thead
    %tr
      %th{ :class => ("hilite" if @sort_type.to_s == "title") }= link_to "Movie Title", root_path(:sort => "title"), {title: "title_header"}
      %th Rating
      %th{ :class => ("hilite" if @sort_type.to_s == "date") }= link_to "Release Date", root_path(:sort => "date"), {title: "release_date_header"}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
